<div class="content-box">
  <h2>Sign Up</h2>

  <div class="inner">
    <% if @user.errors.any? %>
      <div class="validation-errors">
        <p>The following errors occurred:</p>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_for(@user) do |f| %>
      <div class="field">
        <%= f.label :screen_name, "Screen Name" %>
        <%= f.text_field :screen_name %>
      </div>
      <div class="field">
        <%= f.label :full_name, "Full Name" %>
        <%= f.text_field :full_name %>
      </div>
      <div class="field">
        <%= f.label :url, "URL" %>
        <%= f.url_field :url %>
      </div>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>
      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      
      <%= f.submit "Sign Up", :class => "button" %>
    <% end %>
  </div>
</div>