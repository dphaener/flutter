<%= form_for(user, url: user_path) do |f| %>
  <div class="field">
    <%= f.label :screen_name, "Screen Name" %>
    <%= f.text_field :screen_name %>
  </div>
  <div class="field">
    <%= f.label :full_name, "Full Name" %>
    <%= f.text_field :full_name %>
  </div>
  <div class="field">
    <%= f.label :url, "URL" %>
    <%= f.url_field :url %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  
  <%= f.submit button_text, :class => "button" %>
<% end %>